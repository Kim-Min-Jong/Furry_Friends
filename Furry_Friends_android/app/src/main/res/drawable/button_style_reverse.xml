<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" >
        <shape>
            <stroke android:color="#3EA598"
                android:width="1dp"/>
            <corners
                android:radius="12dp"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <stroke android:color="#00BD56"
                android:width="1dp"/>
            <corners
                android:radius="12dp"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <ripple android:color="@color/gray_op" />
        <shape>
            <stroke android:color="#009e46"
                android:width="1dp"/>
            <corners
                android:radius="12dp"/>
        </shape>
    </item>

</selector>