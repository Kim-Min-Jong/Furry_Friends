<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/each_card_view"
    android:layout_margin="20dp"
    app:contentPadding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/ripple_color"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|end">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_style"
                android:text="@string/add_animal"
                android:layout_marginEnd="15dp"
                android:textSize="15sp"
                android:textColor="@color/white" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_style"
                android:text="@string/change"
                android:layout_marginEnd="10dp"
                android:textSize="15sp"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_member"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:elevation="6dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/iv_member"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.03"
                        />
                    <TextView
                        android:id="@+id/animal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="멍멍이"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        />

                    <TextView
                        android:id="@+id/animal_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="남"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        />

                    <TextView
                        android:id="@+id/animal_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="5세"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_do"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        app:cardCornerRadius="20dp"
                        >
                        <TextView
                            android:id="@+id/writing"
                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                            android:ellipsize="end"
                            />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>